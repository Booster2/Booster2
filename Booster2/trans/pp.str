module pp

imports

  libstratego-gpp
  runtime/refactoring/-
  pp/Booster2-parenthesize
  pp/Booster2-pp

rules

  editor-format:
    (node, _, ast, path, project-path) -> (filename, result)
    with
      ext      := <get-extension> path
    ; filename := <guarantee-extension(|$[pp.[ext]])> path
    ; result   := <pp-debug> node

rules
  
  pp-Booster2-string =
    parenthesize-Booster2
    ; prettyprint-Booster2-start-symbols
    ; !V([], <id>)
    ; box2text-string(|120)
      
  pp-partial-Booster2-string =
    parenthesize-Booster2
    ; prettyprint-Booster2
    ; !V([], <id>)
    ; box2text-string(|120)
      
  pp-debug :
    ast -> result
    with
       result := <pp-Booster2-string> ast
    <+ <bottomup(try(not(is-string); not(is-list); not(pp-Booster2-string); debug(!"cannot pp ")))> ast
    ;  result := ""

rules
  
  construct-textual-change = construct-textual-change(pp-partial-Booster2-string, parenthesize, override-reconstruction, resugar)
