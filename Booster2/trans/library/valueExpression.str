	literal-substitute:
		(classname, methodname, Null(), paths, expression, env)
			-> Null()

	literal-substitute:
		(classname, methodname, This(), paths, expression, env)
			-> This()

	literal-substitute:
		(classname, methodname, PathStart(a, b), paths, expression, env)
			-> PathStart(a,b)


	literal-substitute:
		(classname, methodname, Path(a, b), paths, expression, env)
			-> Path(path1,b)
